<Window x:Class="HellTakerAni.VolumeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HellTakerAni"
        mc:Ignorable="d"
        Title="HTA Volume" Height="150" Width="330" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6">
        <Slider x:Name="HTAVolumeLevelSlider" HorizontalAlignment="Center" VerticalAlignment="Top" Width="300" ValueChanged="HTAVolumeLevelSlider_ValueChanged" TickPlacement="BottomRight" SmallChange="1" TickFrequency="5" Margin="0,28,0,0"/>
        <Label x:Name="HTAVolumeLevelLabel" Content="Volume : 0" HorizontalAlignment="Center" Margin="0,54,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="HTAVolumeExtendOption" Content="Extend Volume Control" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
    </Grid>
</Window>
