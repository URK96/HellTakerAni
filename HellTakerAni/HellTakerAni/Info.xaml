<Window x:Class="HellTakerAni.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HellTakerAni"
        mc:Ignorable="d"
        Title="Info" Height="600" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" HorizontalAlignment="Center" HorizontalContentAlignment="Center">
    <Window.Background>
        <SolidColorBrush Color="#FFEE4A4A" Opacity="0.5"/>
    </Window.Background>
    <Window.OpacityMask>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.OpacityMask>
    <Grid>
        <Label Content="HellTakerAni" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top" FontSize="36" Foreground="White"/>
        <Label x:Name="InfoAppVersionLabel" Content="vx.x" HorizontalAlignment="Center" Margin="0,128,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.385,0.417" Foreground="White"/>
        <Label Content="Programmer : URK96" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="0,218,0,0" Foreground="LightGray"/>
        <Label Content="Special Thanks : Developer LaLa" HorizontalAlignment="Center" Margin="0,255,0,0" VerticalAlignment="Top" FontSize="20" Foreground="LightGray"/>
        <Label Content="This program is freeware. No License." HorizontalAlignment="Center" Margin="0,509,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Music" HorizontalAlignment="Center" Margin="0,335,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,384,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            <Hyperlink NavigateUri="https://www.youtube.com/watch?v=EnDXGQmCz3U" RequestNavigate="Hyperlink_RequestNavigate">
                Vitality
            </Hyperlink>
        </TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="0,405,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            <Hyperlink NavigateUri="https://www.youtube.com/watch?v=x6kGfw4cK7Y" RequestNavigate="Hyperlink_RequestNavigate">
                Vitality VIP Edit
            </Hyperlink>
        </TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="0,426,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            <Hyperlink NavigateUri="https://www.youtube.com/watch?v=qDrzzbBFHvI" RequestNavigate="Hyperlink_RequestNavigate">
                Vitality SayMaxWell Remix
            </Hyperlink>
        </TextBlock>

    </Grid>
</Window>
